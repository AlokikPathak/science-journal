<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4a138b"
    >

  <!-- TODO(lizlooney): replace ../drawable/splashscreen_group.png with the imported svg -->
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:src="@drawable/splashscreen_group"
      android:importantForAccessibility="no"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/explore_your_world"
      android:textSize="24sp"
      android:textStyle="bold"
      android:textColor="@color/text_color_white"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="17sp"
      android:gravity="center"
      android:text="@string/use_science_journal"
      android:textSize="16sp"
      android:textColor="@color/text_color_white"
      />

  <Button
      android:id="@+id/btn_get_started"
      android:layout_width="wrap_content"
      android:layout_height="36dp"
      android:minHeight="@dimen/accessibility_touch_target_min_size"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="32dp"
      android:layout_marginBottom="52dp"
      android:paddingTop="11dp"
      android:paddingBottom="9dp"
      android:paddingLeft="17dp"
      android:paddingRight="13dp"
      android:text="@string/get_started"
      android:textStyle="bold"
      android:textAllCaps="true"
      android:textSize="14sp"
      android:background="@android:color/white"
      android:textColor="#4a90e2"
      />

</LinearLayout>
